{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-O2",
        "-Wall",
        "-Wextra",
        "-o",
        "${workspaceFolder}\\src\\output\\main.exe",
        "${workspaceFolder}\\src\\main.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": { "echo": true, "reveal": "always", "panel": "shared" }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${workspaceFolder}\\src\\output\\main.exe",
      "presentation": { "echo": true, "reveal": "always", "panel": "shared" },
      "dependsOn": "build"
    }
  ]
}
